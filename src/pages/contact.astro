---
import PageHeader from "@/components/core/PageHeader.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("contact", "index");
const { contact_form_action } = config.params;
---

<Base entry_keys={["contact", "index"]}>
  <section class="pb-6 pt-16">
    <div class="container">
      <PageHeader page_data={entry.data} />
    </div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="md:col-12 md:order-1 grid place-content-center">
          <form
            class="lg:max-w-[484px]"
            action={contact_form_action}
            method="POST"
          >
            <div class="form-group mb-5">
              <label class="form-label" for="name">Nombre Completo</label>
              <input
                class="form-control"
                type="text"
                id="name"
                placeholder="Tu nombre completo"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="email">Correo Electrónico</label>
              <input
                class="form-control"
                type="text"
                id="email"
                placeholder="Tu dirección de correo electrónico"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="reason">Motivo</label>
              <select name="reason" id="reason" class="form-select" required>
                <option value="">Selecciona el motivo</option>
                <option value="hello">Quiero saludar</option>
                <option value="work-with-you">Quiero trabajar con ustedes</option>
                <option value="work-for-me">Quiero que trabajen conmigo</option>
                <option value="investment">Tengo un proyecto para discutir</option>
                <option value="other">Otro</option>
              </select>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message">Mensaje</label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                cols="30"
                rows="10"
                placeholder="Escribe tu mensaje aquí"
              ></textarea>
            </div>
            <input
              class="btn-primary block w-full"
              type="submit"
              value="Enviar Mensaje"
              onclick="alert('Este formulario no es funcional. Por favor, usa el correo electrónico proporcionado en el pie de página para contactarnos.')"
            />
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
